<!-- How to use: 
First PC:  roslaunch mrslam_sim multimaster_gmapping_merge.launch x:=0 y:=0 robot_name:=robot1
Second PC: roslaunch mrslam_sim multimaster_gmapping_merge.launch x:=10 y:=10 robot_name:=robot2 -->

<launch>
    <arg name="x"/>
    <arg name="y"/>
    <arg name="robot_name"/>
    <arg name="gazebo_gui" default="false"/>
    <param name="use_sim_time" value="true"/>

    <group ns="$(arg robot_name)">
        <node name="master_discovery_fkie" pkg="master_discovery_fkie" type="master_discovery"/>
        <node name="master_sync_fkie" pkg="master_sync_fkie" type="master_sync">
            <!-- map_to_pose, map_to_rviz, world_tf only for visualisation in rviz-->
            <rosparam param="sync_nodes">['*gmapping', '*map_to_pose']</rosparam>
            <!-- DO NOT sync tf when use gmapping, it will not work -->
            <rosparam param="ignore_topics">['*scan','*metadata', '*entropy', '*tf']</rosparam>
        </node>
    </group>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find mrslam_sim)/worlds/willowgarage.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mrslam_sim)/rviz/mm_gmapping_mapmerging.rviz"/>

  <include file="$(find mrslam_sim)/launch/_robot_m_gmapping_mapmerging.launch" >
    <arg name="x" value="$(arg x)" />
    <arg name="y" value="$(arg y)" />
    <arg name="z" value="0" />
    <arg name="robot_name" value="$(arg robot_name)" />
    <arg name="model" value="burger"/>
  </include>

</launch>
