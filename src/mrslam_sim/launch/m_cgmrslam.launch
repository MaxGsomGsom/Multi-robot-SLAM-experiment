<launch>
    <arg name="gazebo_gui" default="false" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="worlds/willowgarage.world" />
        <arg name="paused" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="gui" value="$(arg gazebo_gui)" />
        <arg name="headless" value="false" />
        <arg name="debug" value="false" />
    </include>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mrslam_sim)/rviz/m_cgmrslam.rviz" />

    <!--Robot 1-->
    <include file="$(find mrslam_sim)/launch/_robot_m_cgmrslam.launch">
        <arg name="x" value="4" />
        <arg name="y" value="-5" />
        <arg name="z" value="0" />
        <arg name="robot_name" value="robot0" />
        <arg name="model" value="burger" />
        <arg name="r_id" value="0" />
        <arg name="r_count" value="3" />
    </include>
    
    <!--Robot 2-->
    <include file="$(find mrslam_sim)/launch/_robot_m_cgmrslam.launch">
        <arg name="x" value="11" />
        <arg name="y" value="-5" />
        <arg name="z" value="0" />
        <arg name="robot_name" value="robot1" />
        <arg name="model" value="burger" />
        <arg name="r_id" value="1" />
        <arg name="r_count" value="3" />
    </include>

    <!--Robot 3-->
    <include file="$(find mrslam_sim)/launch/_robot_m_cgmrslam.launch">
        <arg name="x" value="7" />
        <arg name="y" value="8" />
        <arg name="z" value="0" />
        <arg name="robot_name" value="robot2" />
        <arg name="model" value="burger" />
        <arg name="r_id" value="2" />
        <arg name="r_count" value="3" />
    </include>
</launch>
