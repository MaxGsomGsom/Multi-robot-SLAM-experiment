<!-- How to use: roslaunch mrslam_sim multimaster_gmapping_merge.launch x:=1 y:=2 robot_name:=robot1 -->

<launch>
    <arg name="x"/>
    <arg name="y"/>
    <arg name="robot_name"/>
    <arg name="gazebo_gui" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="worlds/willowgarage.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mrslam_sim)/rviz/multi_gmapping_merge.rviz"/>

  <include file="$(find mrslam_sim)/launch/_multi_gmapping_merge_robot.launch" >
    <arg name="x" value="$(arg x)" />
    <arg name="y" value="$(arg y)" />
    <arg name="z" value="0" />
    <arg name="robot_name" value="$(arg robot_name)" />
    <arg name="model" value="burger"/>
  </include>

  <group ns="$(arg robot_name)">
    <node name="master_discovery_fkie" pkg="master_discovery_fkie" type="master_discovery"/>
    <node name="master_sync_fkie" pkg="master_sync_fkie" type="master_sync"/>
  </group>


</launch>
