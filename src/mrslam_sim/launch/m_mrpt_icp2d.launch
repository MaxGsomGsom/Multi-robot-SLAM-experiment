<launch>
    <arg name="gazebo_gui" default="false" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="worlds/willowgarage.world" />
        <arg name="paused" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="gui" value="$(arg gazebo_gui)" />
        <arg name="headless" value="false" />
        <arg name="debug" value="false" />
    </include>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mrslam_sim)/rviz/m_mrpt_icp2d.rviz" />

    <!--Robot 0-->
    <include file="$(find mrslam_sim)/launch/_robot_m_mrpt_icp2d.launch">
        <arg name="x" value="6" />
        <arg name="y" value="-6" />
        <arg name="r_id" value="0" />
        <arg name="r_count" value="2" />
        <arg name="model" value="burger" />
    </include>
    
    <!--Robot 1-->
    <include file="$(find mrslam_sim)/launch/_robot_m_mrpt_icp2d.launch">
        <arg name="x" value="5" />
        <arg name="y" value="-5" />
        <arg name="r_id" value="1" />
        <arg name="r_count" value="2" />
        <arg name="model" value="burger" />
    </include>

    <!--Robot 2-->
    <!--
    <include file="$(find mrslam_sim)/launch/_robot_m_mrpt_icp2d.launch">
        <arg name="x" value="5" />
        <arg name="y" value="-6" />
        <arg name="r_id" value="2" />
        <arg name="r_count" value="3" />
        <arg name="model" value="burger" />
    </include>
    -->
</launch>
