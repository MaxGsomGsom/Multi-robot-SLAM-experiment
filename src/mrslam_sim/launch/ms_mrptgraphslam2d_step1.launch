<launch>

    <arg name="x" />
    <arg name="y" />
    <arg name="r_id" />
    <arg name="r_count"/>


        <arg name="gazebo_gui" default="false" />
    
        <include file="$(find gazebo_ros)/launch/empty_world.launch">
            <arg name="world_name" value="worlds/willowgarage.world" />
            <arg name="paused" value="false" />
            <arg name="use_sim_time" value="true" />
            <arg name="gui" value="$(arg gazebo_gui)" />
            <arg name="headless" value="false" />
            <arg name="debug" value="false" />
        </include>
        
    <group if="$(eval arg('r_id') != 10)">
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mrslam_sim)/rviz/ms_mrptgraphslam2d.rviz" />
    </group>
    
    <include file="$(find mrslam_sim)/launch/_robot_m_mrptgraphslam2d.launch">
        <arg name="x" value="$(arg x)" />
        <arg name="y" value="$(arg y)" />
        <arg name="model" value="burger" />
        <arg name="r_id" value="$(arg r_id)" />
        <arg name="r_count" value="$(arg r_count)" />
    </include>
    
</launch>
